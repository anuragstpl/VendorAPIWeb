@model EntityLayer.UserProfileData
@{
    ViewBag.Title = "UpdateUserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid api-dashboard">
                <h3 class="mt-4 text-center"><img src="~/assets/images/user-icon.png"> &nbsp;Update Profile</h3>

                @using (Html.BeginForm("UpdateUserProfilePost", "Home", FormMethod.Post, new { @id = "updateprofile", @class = "login100-form" }))
                {                    
                    <div class="row mt-4">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">
                            @TempData["Message"]
                            <div class="upload-box text-left">
                                <div class="form-group row form-settings">
                                    <label for="first_name" class="col-sm-4 col-md-4 col-form-label">First Name :</label>
                                    <div class="col-sm-8 col-md-8">
                                        @Html.TextBoxFor(Model => Model.FirstName, new { @class = "form-control inputfield", required = "", placeholder = "First Name" })
                                    </div>
                                </div>
                                <div class="form-group row form-settings">
                                    <label for="last_name" class="col-sm-4 col-md-4 col-form-label">Last Name :</label>
                                    <div class="col-sm-8 col-md-8">
                                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control inputfield", required = "", placeholder = "Last Name" })
                                    </div>
                                </div>
                                <div class="form-group row form-settings">
                                    <label for="inputEmail3" class="col-sm-4 col-md-4 col-form-label">Email Address :</label>
                                    <div class="col-sm-8 col-md-8">
                                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control inputfield", required = "", placeholder = "Email" })
                                    </div>
                                </div>
                                <div class="form-group row form-settings">
                                    <label for="phone_number" class="col-sm-4 col-md-4 col-form-label">Phone Number :</label>
                                    <div class="col-sm-8 col-md-8">
                                        @Html.TextBoxFor(x => x.PhoneNo, new { @class = "form-control inputfield", required = "", placeholder = "PhoneNo" })
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="row csvupload-form">
                                <div class="col-12 text-right">
                                    <button type="reset" class="btn btn-light">Cancel</button>
                                    <button type="submit" class="btn btn-green">
                                        Save &nbsp;<img src="~/assets/images/save-icon.png">
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                }

            </div>
        </main>

    </div>
</div>
